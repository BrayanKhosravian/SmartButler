<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartButler.Views.DrinksPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Drinks}"
                      ItemTapped="Handle_ItemTapped"
                      CachingStrategy="RecycleElement" HasUnevenRows="true">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding ActualImage}" HeightRequest="150" WidthRequest="150" />
                                <Label Text="{Binding Name}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="AddBottle" Command="{Binding AddBottleCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>