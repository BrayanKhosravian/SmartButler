<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SmartButler.View.Controls"
             x:Class="SmartButler.View.Views.WelcomePage">

    <NavigationPage.TitleView>
        <controls:ToolBarControl BindingContext="{Binding ToolbarControlViewModel, Mode=TwoWay}"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Smart Butler"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand" />

            <Button Text="Bluetooth" Command="{Binding BluetoothCommand}" />
            <Button Text="Ingredients" Command="{Binding IngredientsCommand}" />
            <Button Text="DrinkRecipes" Command="{Binding DrinksCommand}" />
            <Button Text="Make DrinkRecipe" Command="{Binding MakeDrinkCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>